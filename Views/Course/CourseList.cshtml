@model List<Course>
    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
        <title>Document</title>
    </head>

    <body>

        <header>
            <nav class="navbar navbar-expand-sm navbar-dark bg-primary">
                <div class="container">
                    <a class="navbar-brand" href="#">CourseApp</a>
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="#">Home</a>
                        </li>
                        <li class="navbar-item">
                            <a class="nav-link" href="#">Kurslar</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        <div class="container pb-3">
            <main>
                @foreach(var kurs in Model){

                <div class="card mp-3" id="kurs_@kurs.Id">
                    <div class="row">
                        <div class="col-md-4">
                            <img src="~/img/@kurs.Image" class="img-fluid rounded-start" alt="">
                        </div>
                        <div class="col-md-8">
                            <h5 class="card-title">@kurs.Title</h5>
                            <p class="card-text">@kurs.Description</p>
                        </div>
                    </div>
                </div>
                }
            </main>
        </div>



    </body>

    </html>